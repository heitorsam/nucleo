----------------
--RECON_FACIAL--
----------------

DROP TABLE passagem_plantao.RECON_FACIAL;
CREATE TABLE passagem_plantao.RECON_FACIAL
(
  CD_RECON_FACIAL      INT NOT NULL,
  CD_USUARIO           INT NOT NULL,
  BLOB_DOCUMENTO       BLOB NOT NULL,
  TP_EXTENSAO          VARCHAR2(4) NOT NULL,  
  DS_NOME_ARQUIVO      VARCHAR2(4000),
  CD_USUARIO_CADASTRO  VARCHAR(50) NOT NULL,
  HR_CADASTRO          TIMESTAMP NOT NULL, 
  CD_USUARIO_ULT_ALT   VARCHAR(50),
  HR_ULT_ALT           TIMESTAMP,   
  
  --PRIMARY KEY
  CONSTRAINT PK_RECON_FACIAL PRIMARY KEY (CD_RECON_FACIAL)

);


DROP SEQUENCE passagem_plantao.SEQ_RECON_FACIAL; 
CREATE SEQUENCE passagem_plantao.SEQ_RECON_FACIAL 
START WITH 1    
INCREMENT BY 1
NOCACHE
NOCYCLE;
